<div class="container">
  <h1 class="main-center">All our cocktails</h1>

  <div class="row justify-content-center">
    <% @cocktails.each do |cocktail| %>
      <span class="col-3 mb-4 mr-4 cocktail-card">
        <div class="crd-img">
          <%= image_tag "https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=986&q=80"%>
        </div>
        <div class="crd-title">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
      </span>
    <% end %>
  </div>
</div>
