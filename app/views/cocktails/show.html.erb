<div class="container">
  <h1><%= @cocktail.name %></h1>

<h2>Recipe</h2>
  <ul class="ingredient-list">
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name.capitalize %> | <em>Quantity: <%= dose.description %></em> <%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
                <% end %>
              </li>
    <% end %>
  </ul>

  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: 'plavo-btn' %>

  <%= link_to "Back to list", cocktails_path, class: 'gold-btn' %>
</div>

