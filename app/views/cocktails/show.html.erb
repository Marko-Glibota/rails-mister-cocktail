<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> | <%= dose.description %> <%= link_to "Delete", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>

<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back to list", cocktails_path %>

